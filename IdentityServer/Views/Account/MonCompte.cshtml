@model IdentityServer.ViewModel.MonCompteViewModel
@{
    ViewData["Title"] = "MonCompte";
}

<h1>Mon compte</h1>

@using (Html.BeginForm(FormMethod.Post, new { @class = "row" }))
{
    <br/>
    <br/>
    <div class="card col-md-12">

        @Html.HiddenFor(model => model.ReturnUrl)

        <div class="card-header">
            <h4>Informations générales</h4>
        </div>

        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        <br />

        <div class="card-body">
            <div class="form-group">
                @Html.LabelFor(model => model.User.Nom, new { @class = "control-label" })
                <br />
                @Html.Label("", Model.User.Nom, new { @class = "control-label" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.User.Prenom, new { @class = "control-label" })
                <br />
                @Html.Label("", Model.User.Prenom, new { @class = "control-label" })

            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.User.Sexe, new { @class = "control-label" })
                <br />
                @Html.Label("", Model.User.Sexe, new { @class = "control-label" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.User.PhoneNumber, "Numéro de téléphone", new { @class = "control-label" })
                <br />
                @Html.Label("", Model.User.PhoneNumber, new { @class = "control-label" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.User.DateNaissance, "Date de naissance", new { @class = "control-label" })
                <br />
                @Html.Label("", Model.User.DateNaissance.ToString("dd/MM/yyyy"), new { @class = "control-label" })
            </div>


            @if (Model.User.estProfessionel)
            {
                <div class="form-group">
                    @Html.Label("", "Gestionnaire d'établissements", new { @class = "control-label" })
                </div>
            }

        </div>
   

        <div class="card-footer">
            <div class="form-row">
                <button type="submit" class="btn btn-primary" name="button" value="modifier">Modifier</button>

                <button type="submit" class="btn btn-danger" name="button" value="cancel">Retour</button>
            </div>
        </div>
    </div>
}
